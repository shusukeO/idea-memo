<h1>Memos</h1>

<% if user_signed_in? %>
  <p>You are <%= current_user.email %></p>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Login', new_user_session_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        
        <%# 自分の投稿を表示。 %>
        <% if memo.user_id == current_user.id %>
          <td><%= memo.user.email %></td>
          <td><%= memo.content %></td>
          <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
          <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

        <%# コメントアウト %>
        <% if false%>
          <td><%= link_to 'Show', memo %></td>
        <%end%>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Memo', new_memo_path %>
