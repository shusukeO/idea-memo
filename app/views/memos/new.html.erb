<div class="container">
    <div>
        <%= render 'form', memo: @memo %>
    </div>
    <%= link_to 'Back', memos_path %>

    <table>
        <thead>
        <tr>
            <th>User</th>
            <th>Content</th>
            <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @memos.each do |memo| %>
            <tr>
            <td><%= memo.user.email %></td>
            <td><%= memo.content %></td>
            
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
